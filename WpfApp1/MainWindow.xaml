<Window x:Class="EVENTS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EVENTS"
        mc:Ignorable="d"
        Title="Прыгающие кнопки" Height="450" Width="800"
        WindowStartupLocation ="CenterScreen"
        SizeChanged="Window_SizeChanged"
        >


    <Canvas MouseDown="Canvas_MouseDown"  Background="White" MouseMove="Canvas_MouseMove">
        <Button x:Name="button1" Content="Закрыть" Canvas.Left="10" Canvas.Top="10" Width="75" Click="Button1_Click" />
        <Button x:Name="button2" Content=" " Canvas.Left="90" Canvas.Top="10" Width="75" MouseMove="button2_MouseMove" Click="button2_Click"/>
        <Button x:Name="button3" Content="Показать курсор" Canvas.Left="690" Canvas.Top="8" Width="100" Click="Button3_Click" />
        <Image x:Name="Cursor_Image" Canvas.Left="100" Source="mouse.gif" Stretch="Fill" Canvas.Top="165" Margin="0" Height="16"  />

    </Canvas>

</Window>
